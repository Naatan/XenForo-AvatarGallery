<?xml version="1.0" encoding="utf-8"?>
<addon addon_id="AvatarGallery" title="Avatar Gallery" version_string="0.1" version_id="0" url="" install_callback_class="" install_callback_method="" uninstall_callback_class="" uninstall_callback_method="">
  <admin_navigation/>
  <admin_permissions/>
  <admin_style_properties/>
  <admin_templates/>
